---
import Block from '../components/Block.astro';

import multilangSpliter, {
  type MD,
  type LangProps,
} from '../utils/multilangSpliter.js';

export interface Props extends LangProps {}
const { lang = 'tw' } = Astro.props;

const files = await Astro.glob('../content/skill/*.md');
const md = multilangSpliter(files, lang);
---

<style>
  .skill {
    @media (max-width: 720px) {
      column-count: 1;
      & :global(h3) {
        margin-block-end: 0.5em;
      }

      & :global(br) {
        display: none;
      }
    }

    @media print {
      & :global(h3) {
        margin-block-end: 0.2cm;
      }
    }
  }
</style>
<Block header="Skill">
  <div class="skill content">
    <md.Content />
  </div>
</Block>
