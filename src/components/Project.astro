---
export interface Props {
  title: string;
  link: string;
  repo?: string;
  links?: Record<string, string>;
}

const { title, link, repo, links = {} } = Astro.props;
---

<style>
  .header {
    display: flex;
    gap: 3ch;
    align-items: baseline;

    & > a {
      font-size: 0.8em;
    }

    @media print {
      /* gap: 0.2em; */
      /* flex-direction: column; */
    }
  }
</style>

<div>
  <div class="header">
    {
      link ? (
        <h3>
          <a target="_blank" href={link}>
            {title}
          </a>
        </h3>
      ) : (
        <h3>{title}</h3>
      )
    }
    {
      repo && (
        <a target="_blank" href={repo}>
          repo
        </a>
      )
    }
    {
      Object.entries(links).map(([title, link]) => {
        return (
          <a target="_blank" href={link}>
            {title}
          </a>
        );
      })
    }
  </div>
  <slot />
</div>
