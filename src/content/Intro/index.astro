---
import { Markdown } from 'astro/components'

const data = Astro.fetchContent('./intro.md')
const intro = data[0]

---


<style lang="scss">
    .intro {
        display: flex;
        & :global(h2)  {
            color: var(--color-secondary);
            font-size: 2em;
            font-weight: 400;

        }

        @media (max-width: 720px) { 
            flex-direction: column;
            
        }
    }

    .avatar {
        height: 20em;
        flex-shrink: 0;
        @media (max-width: 720px) { 
            width: 70%;
            margin: 15% auto;
        }
    }

    .content {
        padding-right: 0px;
        padding-left: 3em;
        @media (max-width: 720px) { 
            h2 {
                text-align: center;
            }
            padding-left: 0;
            padding: 0 1em;
        }
    }

    
</style>
<section class="intro">
    <div class="avatar">
        <img src="/avatar.jpg" alt="avatar">
    </div>
    
    <div class="content">
        <Markdown slot="content">
            {intro.astro.source}
        </Markdown>
    </div>
</section>
